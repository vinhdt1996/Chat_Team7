<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatarNavi"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="30dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/user"/>
    <TextView
        android:id="@+id/txtNameNavi"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imgAvatarNavi"
        android:text="Default name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/txtEmailNavi"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/colorWhite"
        android:text="defaultemail@gmail.com"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/txtNameNavi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>